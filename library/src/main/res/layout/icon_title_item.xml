<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/icon_title_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="5dip"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/icon_title_item_top_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_toRightOf="@id/icon_title_item_icon"
        android:background="@color/divider" />

    <TextView
        android:id="@+id/icon_title_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="15dip"
        android:layout_marginTop="15dip"
        android:layout_toRightOf="@id/icon_title_item_icon"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/icon_title_item_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="15dip"
        android:scaleType="centerInside"
        android:src="@drawable/ic_widget" />
</RelativeLayout>

